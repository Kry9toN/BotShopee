{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2020",
        "module": "commonjs",
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"noEmitHelpers": true,
		"importHelpers": true,
        "incremental": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "include": ["src/*/**.ts", "src/*.ts"]
}
